package com.validation.model;

import com.validation.exception.InvalidAgeException;
import com.validation.exception.InvalidDepartmentException;

public class Employee {

    private int age;
    private String department;

    // Constructor with validation
    public Employee(int age, String department)
            throws InvalidAgeException, InvalidDepartmentException {

        if (age < 18 || age > 60) {
            throw new InvalidAgeException("Age must be between 18 and 60");
        }

        if (!(department.equals("HR") ||
              department.equals("IT") ||
              department.equals("Finance"))) {
            throw new InvalidDepartmentException("Invalid Department");
        }

        this.age = age;
        this.department = department;
    }

    public void display() {
        System.out.println("Employee Age: " + age);
        System.out.println("Employee Department: " + department);
    }
}
